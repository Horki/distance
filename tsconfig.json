{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "noImplicitAny": true,
    "paths": {
      "@controllers": ["controllers"],
      "@helper": ["helper"],
      "@middleware": ["middleware"],
      "@models": ["models"],
      "@routes": ["routes"],
      "@types": ["types"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}